generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// Users table
model users {
  id Int @id @default(autoincrement())
  name String
  password String
  email String @unique
  age Int
  gender Gender

  users_job users_job[]
}

// Enterprise table
model enterprises {
  id Int @id @default(autoincrement())
  name String
  jobTitle String
  email String
  description String
  imgURL String

  users_job users_job[]
}

// Users-Job table
model users_job {
  id Int @id @default(autoincrement())
  userId Int
  enterpriseId Int

  user users @relation(fields: [userId], references: [id])
  enterprise enterprises @relation(fields: [enterpriseId], references: [id])
}

enum Gender {
  male
  female
  non_specified
}